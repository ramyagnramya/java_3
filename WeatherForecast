import java.util.Scanner;
public class WeatherForecast {
    private double temperature;
    private double humidity;
    public WeatherForecast(double temperature, double humidity) {
        this.temperature = temperature;
        this.humidity = humidity;
    }
    public void setTemperature(double temperature) {
        this.temperature = temperature;
    }
    public void setHumidity(double humidity) {
        this.humidity = humidity;
    }
    public double getTemperature() {
        return temperature;
    }
    public double getHumidity() {
        return humidity;
    }
    public void getCurrentConditions() {
        System.out.println("Current Temperature: " + temperature + " °C");
        System.out.println("Current Humidity: " + humidity + "%");
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter current temperature (in Celsius): ");
        double tempInput = scanner.nextDouble();

        System.out.print("Enter current humidity (in percentage): ");
        double humidityInput = scanner.nextDouble();

        WeatherForecast forecast = new WeatherForecast(tempInput, humidityInput);
        forecast.getCurrentConditions();

        scanner.close();
    }
}
OUTPU:-
Enter current temperature (in Celsius): 35
Enter current humidity (in percentage): 25
Current Temperature: 35.0 °C
Current Humidity: 25.0%
